<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @can_merge %>
<h2>Merge Articles</h2>
<form id="merge" method="post">
<label for="merge_width">Article ID:</label> <input name="merge_with" id="merge_width" />
<input type="submit" value="Merge" />
</form>
<% end %>
